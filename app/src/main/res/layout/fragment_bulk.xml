<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryFragments.Bulk">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bulkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/brand_blue"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="PAY US TO COLLECT BULKY ITEMS AT YOUR DOORSTEP! JUST SEND US AN IMAGE NOW."
                android:textAlignment="center"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/aluminium" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/cardboard" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/aluminium_cans" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/books" />

            </LinearLayout>

            <Button
                android:id="@+id/takephoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/btn_brand_pink"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/bulk_img_label"
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/display_bulk_img"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <EditText
                android:id="@+id/bulk_description"
                android:gravity="top"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_field_background"
                android:hint="* Add a description"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />
            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/bulk_submit"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/bulktransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bulkLayout">

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</FrameLayout>
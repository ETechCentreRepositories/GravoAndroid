<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.greenravolution.gravodriver.TransactionDetails">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/brand_green"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="PICKUP"
        app:titleTextAppearance="@style/ToolbarTitle" />

    <ScrollView
        android:layout_margin="10dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey">
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:id="@+id/arrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/brand_pink"
            android:drawableStart="@drawable/ic_add"
            android:gravity="center"
            android:padding="15dp"
            android:text="Add New"
            android:textColor="@color/white" />

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="TOTAL WEIGHT"/>
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/totalWeight"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50KG"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="TOTAL ESTIMATED PRICE"/>
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/totalPrice"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$4.40"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llgetRecepient"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/getRecName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Recepient's Name"
                    android:background="@drawable/grey_text_box"/>
                <EditText
                    android:id="@+id/getRecContact"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:background="@drawable/grey_text_box"/>
            </LinearLayout>
            <Button
                android:id="@+id/addRecipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_blue"
                android:text="Add Recepient"
                android:layout_marginBottom="1dp"
                android:textColor="@color/white"/>
            <Button

                android:id="@+id/cfmPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_green"
                android:text="Collected &amp; Paid"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center">
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="0dp"
            android:background="@drawable/progress_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/progressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_progressbar"
                android:background="@drawable/gravo_logo_black"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

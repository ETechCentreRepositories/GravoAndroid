<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="1dp"
            android:text="PICKUP 1"
            android:textColor="@color/brand_pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pickupTitle"/>
        <TextView
            android:padding="1dp"
            android:text="Blk 20 Seletar West Farmway 6"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:id="@+id/pickupAddress"/>
        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                android:text="(S)80987638"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickupPostal"/>
            <TextView
                android:textColor="@color/brand_purple"
                android:layout_marginStart="5dp"
                android:text="11.15am-12.00pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickupTiming"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:background="@drawable/btn_brand_green_round"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="10sp"
                android:text="On The Way"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp">

            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>
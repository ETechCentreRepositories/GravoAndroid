<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.greenravolution.gravodriver.BulkTransactionDetails">
    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/brand_blue"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:navigationIcon="@drawable/ic_arrow_back">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bulk_item"
                android:textColor="@color/white"
                android:id="@+id/title"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:layout_below="@id/tool"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey">
                <TextView
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:id="@+id/bulkAddress"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blk ... "/>
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"
                    android:id="@+id/bulkArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blk ... "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/washing_machine"
                        android:padding="10dp"
                        android:background="@color/brand_purple"/>
                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="20sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/bulk_items"/>
                        <TextView
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/description"
                            android:textSize="15sp"
                            android:text="Toshiba 50kg Washing Machine"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESTIMATED COLLECTION FEE"/>
                    <TextView
                        android:textSize="15sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginStart="20dp"
                        android:id="@+id/collectionFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$30.00"/>
                </LinearLayout>


            </LinearLayout>
            <Button
                android:id="@+id/btnAccept"
                android:text="Accept"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_green"/>
            <Button
                android:id="@+id/btnDecline"
                android:text="Decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_pink"
                android:textColor="@color/white"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
